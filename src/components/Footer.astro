---
const currentYear = new Date().getFullYear();
import SupportBlock from './SupportBlock.astro';
---

<footer class="footer">
  <div class="footer__container">
    <div class="footer__content">
      <div class="footer__info">
        <p class="footer__copyright">
          <span class="footer__year">{currentYear}</span>
          <span class="footer__divider">/</span>
          <span class="footer__author">Nikolai Shabalin</span>
        </p>
        <p class="footer__tagline">Еженедельные дайджесты для фронтендеров</p>
      </div>

      <div class="footer__social">
        <p class="footer__social-label">Связь</p>
        <a 
          class="footer__social-link" 
          href="https://github.com/nikolai-shabalin/" 
          target="_blank" 
          rel="noopener noreferrer"
          aria-label="GitHub профиль"
        >
          <svg class="footer__icon" viewBox="0 0 16 16" aria-hidden="true" width="24" height="24">
            <path fill="currentColor"
                  d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
          </svg>
          <span class="footer__link-text">GitHub</span>
        </a>
      </div>
    </div>

    <SupportBlock />
  </div>
</footer>

<style>
  .footer {
    margin-top: auto;
    padding: var(--space-4xl) var(--space-xl) var(--space-2xl);
    border-top: 4px solid rgb(var(--black));
    background: rgb(var(--gray-light));
    position: relative;
  }

  .footer::before {
    content: '';
    position: absolute;
    top: -4px;
    left: 0;
    width: 200px;
    height: 4px;
    background: var(--accent);
  }

  .footer__container {
    max-width: var(--content-width);
    margin: 0 auto;
  }

  .footer__content {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: var(--space-3xl);
    align-items: start;
    margin-bottom: var(--space-3xl);
    padding-bottom: var(--space-2xl);
    border-bottom: 2px solid rgb(var(--black));
  }

  .footer__info {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .footer__copyright {
    font-size: var(--text-lg);
    font-weight: 700;
    color: rgb(var(--black));
    margin: 0;
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    letter-spacing: -0.02em;
  }

  .footer__year {
    font-size: var(--text-xl);
    font-weight: 900;
  }

  .footer__divider {
    color: var(--accent);
    font-weight: 900;
  }

  .footer__author {
    font-weight: 700;
  }

  .footer__tagline {
    font-size: var(--text-sm);
    color: rgb(var(--gray));
    margin: 0;
    font-weight: 500;
  }

  .footer__social {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    align-items: flex-end;
  }

  .footer__social-label {
    font-size: var(--text-xs);
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgb(var(--gray));
    margin: 0;
  }

  .footer__social-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    color: rgb(var(--black));
    font-size: var(--text-sm);
    font-weight: 700;
    padding: var(--space-sm) var(--space-md);
    border: 2px solid rgb(var(--black));
    background: rgb(var(--white));
    transition: all var(--transition-fast);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    box-shadow: 3px 3px 0 rgb(var(--black));
  }

  .footer__social-link:hover {
    background: var(--accent);
    color: rgb(var(--white));
    border-color: var(--accent);
    transform: translate(2px, 2px);
    box-shadow: 1px 1px 0 rgb(var(--black));
  }

  .footer__icon {
    transition: transform var(--transition-base);
  }

  .footer__social-link:hover .footer__icon {
    transform: rotate(-10deg) scale(1.1);
  }

  .footer__link-text {
    font-family: var(--font-heading);
  }

  @media (max-width: 768px) {
    .footer {
      padding: var(--space-2xl) var(--space-md);
    }

    .footer__content {
      grid-template-columns: 1fr;
      gap: var(--space-xl);
    }

    .footer__social {
      align-items: flex-start;
    }

    .footer__copyright {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-xs);
    }
  }
</style>
