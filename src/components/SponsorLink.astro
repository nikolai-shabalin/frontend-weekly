---
export interface Props {
  href: string;
  title: string;
  description?: string;
  className?: string;
}

const { href, title, description, className = '' } = Astro.props;
---

<div class={`sponsor-link ${className}`}>
  <div class="sponsor-link__badge">Спонсорский материал</div>
  <a href={href} class="sponsor-link__content" target="_blank" rel="noopener noreferrer">
    <h3 class="sponsor-link__title">{title}</h3>
    {description && <p class="sponsor-link__description">{description}</p>}
  </a>
</div>

<style>
  .sponsor-link {
    position: relative;
    display: block;
    margin: var(--space-lg) 0;
    padding: var(--space-lg);
    background: rgba(var(--accent), 0.05);
    border: 2px solid var(--accent);
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(var(--accent), 0.1);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .sponsor-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(var(--accent), 0.15);
  }

  .sponsor-link__badge {
    position: absolute;
    top: -1px;
    right: -1px;
    background: var(--accent);
    color: #ffffff;
    font-size: var(--text-xs);
    font-weight: 600;
    padding: 0.25rem 0.75rem;
    border-radius: 0 12px 0 8px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    box-shadow: 0 2px 4px rgba(var(--accent), 0.3);
  }

  .sponsor-link__content {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .sponsor-link__title {
    font-size: var(--text-lg);
    font-weight: 600;
    color: rgb(var(--black));
    margin: 0 0 var(--space-sm) 0;
    line-height: 1.3;
  }

  .sponsor-link__description {
    font-size: var(--text-sm);
    color: rgb(var(--gray-dark));
    margin: 0;
    line-height: 1.5;
  }

  .sponsor-link:hover .sponsor-link__title {
    color: var(--accent-dark);
  }

  /* Адаптивность */
  @media (max-width: 720px) {
    .sponsor-link {
      padding: var(--space-md);
    }

    .sponsor-link__badge {
      font-size: 0.7rem;
      padding: 0.2rem 0.6rem;
    }
  }
</style>

