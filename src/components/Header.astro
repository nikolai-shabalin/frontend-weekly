---
import { SITE_TITLE } from '../consts';
---

<header class="header">
  <div class="header__container">
    <a href="/" class="logo">
      <span class="logo__text">{SITE_TITLE}</span>
      <span class="logo__line"></span>
    </a>
    <nav class="nav">
      <a href="/support" class="nav__link nav__link--primary">
        <span class="nav__link-text">Поддержать</span>
      </a>
    </nav>
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: var(--bg-color);
    border-bottom: 3px solid rgb(var(--black));
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }

  .header__container {
    max-width: var(--content-width);
    margin: 0 auto;
    padding: var(--space-lg) var(--space-xl);
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-xl);
  }

  .logo {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
    text-decoration: none;
    border: none;
    position: relative;
    padding: var(--space-xs) 0;
  }

  .logo:hover {
    background: transparent;
  }

  .logo__text {
    font-family: var(--font-heading);
    font-size: var(--text-xl);
    font-weight: 900;
    color: rgb(var(--black));
    letter-spacing: -0.02em;
    text-transform: uppercase;
    line-height: 1;
    transition: color var(--transition-base);
  }

  .logo__line {
    display: block;
    height: 4px;
    background: var(--accent);
    width: 0;
    transition: width var(--transition-base);
  }

  .logo:hover .logo__text {
    color: var(--accent);
  }

  .logo:hover .logo__line {
    width: 100%;
  }

  .nav {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
  }

  .nav__link {
    font-size: var(--text-sm);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: var(--space-sm) var(--space-lg);
    border: none;
    transition: all var(--transition-base);
    position: relative;
    overflow: hidden;
  }

  .nav__link::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background: var(--accent);
    transform: translateX(-100%);
    transition: transform var(--transition-base);
  }

  .nav__link:hover::before {
    transform: translateX(0);
  }

  .nav__link--primary {
    background: var(--accent);
    color: rgb(var(--white));
    border: 3px solid rgb(var(--black));
    box-shadow: 4px 4px 0 rgb(var(--black));
    transition: all var(--transition-fast);
  }

  .nav__link--primary:hover {
    background: var(--accent-dark);
    transform: translate(2px, 2px);
    box-shadow: 2px 2px 0 rgb(var(--black));
  }

  .nav__link--primary::before {
    display: none;
  }

  @media (max-width: 768px) {
    .header__container {
      padding: var(--space-md);
    }

    .logo__text {
      font-size: var(--text-lg);
    }

    .nav__link {
      padding: var(--space-xs) var(--space-md);
      font-size: var(--text-xs);
    }
  }
</style>
